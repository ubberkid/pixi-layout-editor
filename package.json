{
  "name": "pixi-layout-editor",
  "version": "0.1.0",
  "description": "Visual editor for @pixi/layout properties with real-time debugging",
  "type": "module",
  "main": "./bridge/dist/index.js",
  "types": "./bridge/dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./bridge/dist/index.js",
      "types": "./bridge/dist/index.d.ts"
    },
    "./vite": {
      "import": "./bridge/dist/vite-plugin.js",
      "types": "./bridge/dist/vite-plugin.d.ts"
    }
  },
  "workspaces": [
    "bridge",
    "editor"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=editor",
    "build": "npm run build:editor && npm run bundle-editor && npm run build:bridge",
    "build:bridge": "npm run build --workspace=bridge",
    "build:editor": "npm run build --workspace=editor",
    "bundle-editor": "rm -rf bridge/editor-dist && cp -r editor/dist bridge/editor-dist"
  },
  "peerDependencies": {
    "pixi.js": "^8.0.0",
    "vite": "^5.0.0 || ^6.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ubberkid/pixi-layout-editor"
  },
  "keywords": [
    "pixijs",
    "pixi",
    "layout",
    "editor",
    "debug",
    "flexbox",
    "vite"
  ],
  "author": "ubberkid",
  "license": "MIT"
}
